<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            tools:layout_editor_absoluteY="221dp" tools:layout_editor_absoluteX="101dp">
        <RadioButton
                android:text="Masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
        <RadioButton
                android:text="Feminino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton4" android:layout_weight="1"/>
    </RadioGroup>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout"
            tools:layout_editor_absoluteY="120dp" tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Altura"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Informe sua Altura e Sexo para saber o seu peso ideal!"
            android:layout_width="286dp"
            android:layout_height="118dp"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="49dp"/>
    <Button
            android:text="Calcular peso ideal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            tools:layout_editor_absoluteY="266dp" tools:layout_editor_absoluteX="105dp"/>
</android.support.constraint.ConstraintLayout>